<h3 class='page-header'>Create New User</h3>

<div class='card col-6 rounded mb-0 mx-auto'>
    <div class='card-body'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control shadow' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control shadow' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control shadow' %>
  </div>

    <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: 'form-control shadow' %>
  </div>
    <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: 'form-control shadow' %>
  </div>
    <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, class: 'form-control shadow' %>
  </div>
  </div>
  <div class="field mt-2">
    <%= f.label :role %>
    <%= f.select:role, options_for_select(User.roles.map { |key, value| [key.humanize, key] }, f.object.role), {selected: true} %>
  </div>

  <div class="actions">
    <%= f.submit "Create User", class: 'btn btn-primary mt-2 mb-2' %>
  </div>
<% end %>
  </div>
</div>

<div class='text-center'>
  <%= link_to "Back", :back, class: 'btn btn-primary mb-2 mt-2' %>
</div>

<%#= render "devise/shared/links" %>
